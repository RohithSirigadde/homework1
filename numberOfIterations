iteration = int(input("Enter the number of iteration: "))
list01=[]
list02=[]
y = 1
for x in range(1, iteration+1):
    number = (1.0/y)
    list01.append(number)
    y +=2.0

for i in range(1, iteration, 2):
    neg = list01[i]*-1.0
    list02.append(neg)

comb = (sum(list01)) + (sum(list02)) + (sum(list02))
pi = comb*4.0
print("The approximation of pi is", pi)
